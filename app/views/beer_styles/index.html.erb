<div class="mx-auto px-16 py-6 mb-10" data-controller="beer-types beer-styles">
  <div class="flex flex-row w-full mx-auto h-full gap-4 items-center justify-between">

    <div class="text-2xl">
      <h1 class="text-2xl w-60">Learn about</h1>
      <div class="relative overflow-hidden h-8">
        <span data-beer-types-target="beerText"
              class="transition-all opacity-100 duration-500 ease-out block">
          any Beer Type
        </span>
      </div>
    </div>

    <div class="p-10 grid grid-cols-7">

      <% @beer_types.each do |beer_type| %>
        <%= link_to beer_type_styles_path(beer_type_id: beer_type.id),
              data: { turbo_frame: "beer-styles-list",
                      action: "mouseenter->beer-types#beerTypeHover mouseleave->beer-types#beerHoverLeave",
                      beer_type_name: beer_type.name },
              class: "p-4 rounded-lg shadow-lg flex items-center justify-center transition hover:bg-gray-200" do %>
          <%= inline_svg_tag 'icons/pint1', class: "beer-icon" %>
        <% end %>
      <% end %>

    </div>
  </div>

  <turbo-frame id="beer-styles-list"></turbo-frame>

  <turbo-frame id="beer-style-modal"></turbo-frame>

</div>
