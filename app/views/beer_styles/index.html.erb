<div class="mx-auto px-16 py-6 mb-10" data-controller="beer-types beer-styles">
  <h1 class="text-4xl font-bold text-center mt-6 mb-8">Welcome to the Beer Style Catalog</h1>
  <div class="flex flex-col mx-auto items-center justify-between">

    <div class="text-2xl flex justify-center items-center gap-1 pl-8">
      <h1 class="w-auto whitespace-nowrap">Familiarize yourself with</h1>
      <div class="relative h-8 w-40 text-center overflow-hidden">
        <span data-beer-types-target="beerText"
              class="transition-all opacity-100 duration-500 ease-out block text-left">
          any Style
        </span>
      </div>
    </div>

    <div class="p-10 grid grid-cols-7">

      <% @beer_types.each do |beer_type| %>
        <div class="p-1">

          <div
            data-action="click->beer-styles#showList mouseenter->beer-types#beerTypeHover mouseleave->beer-types#beerHoverLeave"
            data-beer-type-id="<%= beer_type.id %>"
            data-beer-type-name="<%= beer_type.name %>"
            data-beer-type-description="<%= beer_type.description %>"
            class="beer-type">
            <%= inline_svg_tag beer_type_icon(beer_type.name), class: "beer-icon" %>
          </div>

        </div>
      <% end %>

    </div>
  </div>

  <div data-beer-styles-target="beerTypeData" class=""></div>
  <div data-beer-styles-target="beerStylesList" class="mt-8"></div>
  <div data-beer-styles-target="infoCard"></div>
</div>
